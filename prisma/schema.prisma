// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id
  name String
  cpf String
  birth String
  email String @unique
  password String
  role Boolean
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userProducts Products[] @relation("userProducts")
  orders Orders[]

  @@map("users")
}

model Products {
  id String @id
  name String
  detail String
  price Float
  avaible Boolean
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userProducts Users @relation("userProducts", fields: [userProductsId], references: [id], onDelete: Cascade)
  userProductsId String @map("user_products_id")
  orders Orders[]

  @@map("products")
}

model Orders {
  id String @id

  user Users @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @map("user_id")

  product Products @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String @map("product_id")


  @@map("orders")
}